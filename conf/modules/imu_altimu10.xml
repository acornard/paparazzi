<!DOCTYPE module SYSTEM "module.dtd">

<module name="imu_altimu10" dir="imu">
  <doc>
    <description>
      ALTIMU10 IMU.
      - Accelerometer: LSM6DS33 via I2C
      - Gyroscope: LSM6DS33 via I2C
      - Magnetometer: LIS3MDL via I2C
    </description>
    <configure name="IMU_ALTIMU10_I2C_DEV" value="i2c2" description="I2C device to use"/>
    <section name="IMU" prefix="IMU_">
      <define name="MAG_X_NEUTRAL" value="2358"/>
      <define name="MAG_Y_NEUTRAL" value="2362"/>
      <define name="MAG_Z_NEUTRAL" value="2119"/>

      <define name="MAG_X_SENS" value="3.4936416" integer="16"/>
      <define name="MAG_Y_SENS" value="3.607713" integer="16"/>
      <define name="MAG_Z_SENS" value="4.90788848" integer="16"/>
    </section>
  </doc>
  <autoload name="imu_common"/>
  <autoload name="imu_nps"/>
  <header>
    <file name="imu_altimu10.h" dir="subsystems/imu"/>
  </header>
  <init fun="imu_altimu10_init()"/>
  <periodic fun="imu_altimu10_periodic()"/>
  <event fun="imu_altimu10_event()"/>
  <makefile target="!sim|nps|fbw">
    <configure name="IMU_ALTIMU10_I2C_DEV" default="i2c2" case="lower|upper"/>
    <define name="IMU_ALTIMU10_I2C_DEV" value="$(IMU_ALTIMU10_I2C_DEV_LOWER)"/>
    <define name="USE_$(IMU_ALTIMU10_I2C_DEV_UPPER)"/>

    <define name="IMU_TYPE_H" value="subsystems/imu/imu_altimu10.h" type="string"/>

    <file name="lis3mdl_i2c.c" dir="peripherals"/>
    <file name="lsm6ds33_i2c.c" dir="peripherals"/>
    <file name="lps25h_i2c.c" dir="peripherals"/>
    <file name="imu_altimu10.c" dir="subsystems/imu"/>
  </makefile>
</module>
