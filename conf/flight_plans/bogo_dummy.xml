<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan name="BOGODRONE" alt="262" ground_alt="260" lat0="43 56 13.34" lon0="1 46 59.83" max_dist_from_home="50" security_height="0.3">
	<header>
		#include "autopilot.h"
	</header>
	<waypoints>
		<waypoint name="HOME" x="0.0" y="0.0"/>
		<waypoint name="CLIMB" x="0.0" y="0.0"/>
		<waypoint name="STDBY" x="0.0" y="0.0"/>
		<waypoint name="LAND" x="0.0" y="0.0"/>
		<waypoint name="A1" x="5.0" y="0.0"/>
		<waypoint name="A2" x="-5.0" y="0.0"/>
		<waypoint name="B1" x="0.0" y="5.0"/>
		<waypoint name="B2" x="0.0" y="-5.0"/>
	</waypoints>
	<blocks>
		<block name="Geo init">
			<while cond="LessThan(NavBlockTime(), 10)"/>
			<call_once fun="NavSetGroundReferenceHere()"/>
			<!--<call_once fun="NavSetAltitudeReferenceHere()"/>-->
		</block>
		<block name="Holding point">
			<call_once fun="NavKillThrottle()"/>
			<attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
		</block>
		<block name="Start Engine">
			<call_once fun="NavResurrect()"/>
			<attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
		</block>
		<block key="t" name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
			<!--<exception cond="GetPosAlt() > 262" deroute="Standby"/>-->
			<call_once fun="NavSetWaypointHere(WP_CLIMB)"/>
			<stay vmode="throttle" throttle="0.9" wp="CLIMB" until="GetPosAlt() > 261"/>
			<!--<go wp="CLIMB" alt="2"/>-->
			<!--<stay wp="CLIMB" until="MoreThan(NavBlockTime(), 60)"/>-->
		</block>
		<block key="s" name="Standby" strip_button="Standby" strip_icon="home.png">
			<call_once fun="NavSetWaypointHere(WP_STDBY)"/>
			<!--<stay wp="STDBY" alt="GetPosAlt()"/>-->
			<attitude roll="0" vmode="throttle" throttle="0.78"/>
		</block>
		<block name="Land here" strip_button="Land Here" strip_icon="land-right.png">
			<call_once fun="NavSetWaypointHere(WP_LAND)"/>
			<go wp="LAND"/>
		</block>
		<block name="Flare">
			<exception cond="NavDetectGround()" deroute="Holding point"/>
			<exception cond="!nav_is_in_flight()" deroute="Landed"/>
			<call_once fun="NavStartDetectGround()"/>
			<!--<stay climb="-0.3" vmode="climb" wp="LAND"/>-->
			<stay vmode="throttle" throttle="0.78" wp="LAND"/>
		</block>
		<block name="Landed">
			<attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
		</block>
		<!--<block name="Test">
			<go wp="A1"/>
			<go wp="B1"/>
			<go wp="A2"/>
			<go wp="B2"/>
		</block>-->
	</blocks>
</flight_plan>
