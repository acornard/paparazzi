<!DOCTYPE airframe SYSTEM "../airframe.dtd">

<!-- BOGO airframe -->

<airframe name="BOGO">

	<firmware name="rotorcraft">
		<target name="ap" board="bogo">
			<!--<define name="AUTOPILOT_DISABLE_AHRS_KILL"/>-->
		</target>

	<module name="imu" type="altimu10">
			<configure name="IMU_ALTIMU10_I2C_DEV" value="i2c2"/>
		</module>

		<!--<module name="telemetry" type="transparent_udp"/>-->
		<module name="telemetry" type="transparent">
			<configure name="MODEM_PORT" value="UART2"/>
			<configure name="MODEM_BAUD" value="B57600"/>
		</module>
		<module name="radio_control" type="datalink"/>
		<module name="motor_mixing"/>
		<module name="actuators" type="bogo"/>
		<module name="stabilization" type="int_quat"/>


		<module name="ahrs" type="int_cmpl_quat">
			<configure name="USE_MAGNETOMETER" value="TRUE"/>
      <define name="USE_BAROMETER" value="TRUE"/>
		</module>
		<module name="ins" type="extended"/>

		<configure name="MODEM_DEV" value="UDP0"/>
		<configure name="MODEM_HOST" value="192.168.7.3"/>
		<configure name="DEBUG_INFO" value="yes"/>
		<configure name="OPT" value="0"/>
		<configure name="HOST" value="192.168.7.2"/>
		<configure name="USER" value="root"/>
	</firmware>

	<servos driver="Default">
		<servo name="NW" no="0" min="1000" neutral="1000" max="1900"/>
		<servo name="NE" no="1" min="1000" neutral="1000" max="1900"/>
		<servo name="SE" no="2" min="1000" neutral="1000" max="1900"/>
		<servo name="SW" no="3" min="1000" neutral="1000" max="1900"/>
	</servos>

	<commands>
		<axis name="PITCH" failsafe_value="0"/>
		<axis name="ROLL" failsafe_value="0"/>
		<axis name="YAW" failsafe_value="0"/>
		<axis name="THRUST" failsafe_value="0"/>
	</commands>

	<command_laws>
		<call fun="motor_mixing_run(autopilot_get_motors_on(),FALSE,values)"/>
		<set servo="NW" value="motor_mixing.commands[0]"/>
		<set servo="NE" value="motor_mixing.commands[1]"/>
		<set servo="SE" value="motor_mixing.commands[2]"/>
		<set servo="SW" value="motor_mixing.commands[3]"/>
	</command_laws>

	<section name="MIXING" prefix="MOTOR_MIXING_">
		<define name="TRIM_ROLL" value="0"/>
		<define name="TRIM_PITCH" value="0"/>
		<define name="TRIM_YAW" value="0"/>
		<define name="TYPE" value="QUAD_X"/>
	</section>

	<section name="AUTOPILOT">
		<define name="MODE_STARTUP" value="AP_MODE_NAV"/>
		<define name="MODE_MANUAL" value="AP_MODE_ATTITUDE_DIRECT"/>
		<define name="MODE_AUTO1" value="AP_MODE_ATTITUDE_Z_HOLD"/>
		<define name="MODE_AUTO2" value="AP_MODE_NAV"/>
	</section>

	<section name="IMU" prefix="IMU_">
		<define name="GYRO_P_SIGN" value="-1"/>
		<define name="GYRO_Q_SIGN" value="1"/>
		<define name="GYRO_R_SIGN" value="1"/>
		<define name="ACCEL_X_SIGN" value="1"/>
		<define name="ACCEL_Y_SIGN" value="-1"/>
		<define name="ACCEL_Z_SIGN" value="-1"/>
		<define name="BODY_TO_IMU_PHI" value="-1.9" unit="deg"/>
		<define name="BODY_TO_IMU_THETA" value="2.8" unit="deg"/>
		<define name="BODY_TO_IMU_PSI" value="0.0" unit="deg"/>

		<define name="MAG_X_NEUTRAL" value="-1845"/>
		<define name="MAG_Y_NEUTRAL" value="2922"/>
		<define name="MAG_Z_NEUTRAL" value="-2887"/>
		<define name="MAG_X_SENS" value="0.59608643943" integer="16"/>
		<define name="MAG_Y_SENS" value="0.620422703124" integer="16"/>
		<define name="MAG_Z_SENS" value="0.629618063993" integer="16"/>

		<define name="ACCEL_X_NEUTRAL" value="21"/>
		<define name="ACCEL_Y_NEUTRAL" value="37"/>
		<define name="ACCEL_Z_NEUTRAL" value="-9"/>
		<define name="ACCEL_X_SENS" value="4.9062130112" integer="16"/>
		<define name="ACCEL_Y_SENS" value="4.93978233386" integer="16"/>
		<define name="ACCEL_Z_SENS" value="4.92709870425" integer="16"/>

	</section>
	<section name="AHRS" prefix="AHRS_">
		<!-- Toulouse -->
		<define name="H_X" value="0.513081"/>
		<define name="H_Y" value="-0.00242783"/>
		<define name="H_Z" value="0.858336"/>
	</section>

	<section name="STABILIZATION_ATTITUDE" prefix="STABILIZATION_ATTITUDE_">
		<!-- setpoints -->
		<define name="SP_MAX_PHI" value="10" unit="deg"/>
		<define name="SP_MAX_THETA" value="10" unit="deg"/>
		<define name="SP_MAX_R" value="600" unit="deg/s"/>
		<define name="DEADBAND_A" value="0"/>
		<define name="DEADBAND_E" value="0"/>
		<define name="DEADBAND_R" value="250"/>

		<!-- reference -->
		<define name="REF_OMEGA_P" value="450" unit="deg/s"/>
		<define name="REF_ZETA_P" value="0.9"/>
		<define name="REF_MAX_P" value="600." unit="deg/s"/>
		<define name="REF_MAX_PDOT" value="RadOfDeg(8000.)"/>

		<define name="REF_OMEGA_Q" value="450" unit="deg/s"/>
		<define name="REF_ZETA_Q" value="0.9"/>
		<define name="REF_MAX_Q" value="600." unit="deg/s"/>
		<define name="REF_MAX_QDOT" value="RadOfDeg(8000.)"/>

		<define name="REF_OMEGA_R" value="200" unit="deg/s"/>
		<define name="REF_ZETA_R" value="0.9"/>
		<define name="REF_MAX_R" value="300." unit="deg/s"/>
		<define name="REF_MAX_RDOT" value="RadOfDeg(4000.)"/>

		<!-- feedback -->

		<define name="PHI_PGAIN" value="850"/>
		<define name="PHI_DGAIN" value="425"/>
		<define name="PHI_IGAIN" value="0"/>

		<define name="THETA_PGAIN" value="850"/>
		<define name="THETA_DGAIN" value="425"/>
		<define name="THETA_IGAIN" value="0"/>

		<define name="PSI_PGAIN" value="1000"/>
		<define name="PSI_DGAIN" value="700"/>
		<define name="PSI_IGAIN" value="0"/>
<!--
		<define name="PHI_PGAIN" value="500"/>
		<define name="PHI_DGAIN" value="300"/>
		<define name="PHI_IGAIN" value="100"/>

		<define name="THETA_PGAIN" value="500"/>
		<define name="THETA_DGAIN" value="300"/>
		<define name="THETA_IGAIN" value="100"/>
-->
		<!-- feedforward -->

		<define name="PHI_DDGAIN" value="0"/>
		<define name="THETA_DDGAIN" value="0"/>
<!--
		<define name="PHI_DDGAIN" value="250"/>
		<define name="THETA_DDGAIN" value="250"/>
-->
		<define name="PSI_DDGAIN" value="100"/>
	</section>


	<section name="GUIDANCE_V" prefix="GUIDANCE_V_">
		<define name="HOVER_KP" value="283"/>
		<define name="HOVER_KD" value="82"/>
		<define name="HOVER_KI" value="13"/>
		<define name="NOMINAL_HOVER_THROTTLE" value="0.600"/>
		<define name="ADAPT_THROTTLE_ENABLED" value="FALSE"/>
		<!--<define name="MAX_RC_CLIMB_SPEED" value="-1.0" unit="m/s"/>-->
	</section>

	<section name="GUIDANCE_H" prefix="GUIDANCE_H_">
		<!-- Good weather -->
		<define name="MAX_BANK" value="20" unit="deg"/>
		<!-- Bad weather -->
		<!-- define name="MAX_BANK" value="32" unit="deg"/ -->
		<define name="PGAIN" value="79"/>
		<define name="DGAIN" value="100"/>
		<define name="IGAIN" value="30"/>
	</section>

</airframe>
